{
  "version": 2,
  "builds": [
    { "src": "server/**/*.js", "use": "@vercel/node" },
    { "src": "server/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/api/$1" },
    { "src": "/(.*)", "dest": "server/build/$1" }
  ], 
  "scripts": {
  "build": "your-build-command"
}
}