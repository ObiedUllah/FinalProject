{
  "version": 2,
  "builds": [
    { "src": "server/**/*.js", "use": "@vercel/node" },
    { "src": "server/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "server/$1" },
    { "src": "/(.*)", "dest": "server/build/index.html" }
  ],
  "scripts": {
    "build": "yarn build"
  }
}